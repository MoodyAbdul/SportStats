{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "filesGlob": [
    "/src/**/*.ts",
    "/test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
        "types"
  ]
}
